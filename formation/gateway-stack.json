{
    "AWSTemplateFormatVersion": "2010-09-09",
    "Transform": "AWS::Serverless-2016-10-31",
    "Globals": {
        "Function": {
            "Timeout": 30
        }
    },
    "Resources": {
        "ApiGateway": {
            "Type": "AWS::Serverless::RestApi",
            "Properties": {
                "StageName": "www",
                "TracingEnabled": true,
                "Cors": {
                    "AllowHeaders": "'authorization, token-id, Content-Type, Access-Control-Allow-Headers, Authorization, X-Requested-With'",
                    "AllowOrigin": "'*'"
                },
                "EndpointConfiguration": {
                    "Types":  "REGIONAL"
                }
            }
        },
        "BackendFunction": {
            "Type": "AWS::Serverless::Function",
            "Properties": {
                "FunctionName": {
                    "Fn::Sub": "ua-wck-backend-${ScopeName}"
                },
                "CodeUri": "../backend/dist",
                "Handler": "index.handler",
                "Runtime": "nodejs14.x",
                "MemorySize": 256,
                "Architectures": [
                    "x86_64"
                ],
                "Events": {
                    "BackendApiCall": {
                        "Type": "Api",
                        "Properties": {
                            "Type": "REGIONAL",
                            "Path": "/backend/{proxy+}",
                            "Method": "post",
                            "RestApiId": {
                                "Ref": "ApiGateway"
                            }
                        }
                    }
                }
            }
        },
        "BackendStaticProxyFunction": {
            "Type": "AWS::Serverless::Function",
            "Properties": {
                "FunctionName": {
                    "Fn::Sub": "ua-wck-backend-static-proxy-${ScopeName}"
                },
                "CodeUri": "../backend-static-proxy/dist",
                "Handler": "index.handler",
                "Runtime": "nodejs14.x",
                "MemorySize": 256,
                "Architectures": [
                    "x86_64"
                ],
                "Environment": {
                    "Variables": {
                        "SERVER_NEXTJS": "http://172.17.0.1:4400/"
                    }
                },
                "Events": {
                    "RootBackendStaticApiCall": {
                        "Type": "Api",
                        "Properties": {
                            "Type": "REGIONAL",
                            "Path": "/",
                            "Method": "get",
                            "RestApiId": {
                                "Ref": "ApiGateway"
                            }
                        }
                    },
                    "BackendStaticApiCall": {
                        "Type": "Api",
                        "Properties": {
                            "Type": "REGIONAL",
                            "Path": "/{proxy+}",
                            "Method": "get",
                            "RestApiId": {
                                "Ref": "ApiGateway"
                            }
                        }
                    }
                }
            }
        }
    },
    "Outputs": {},
    "Parameters": {
        "ScopeName": {
            "Description": "Name of the current scope (<<ScopeName>>.ua-wck.com)",
            "Type": "String"
        }
    }
}